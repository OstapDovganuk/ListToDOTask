@model ToDoList
<h1>Smart List</h1>
<a asp-action="SmartTasks" asp-route-hide="@ViewData["HideComolet"]" asp-route-smart="@ViewData["SmartName"]">Hide Complet</a>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="SmartTasks" asp-route-sort="@ViewData["title"]" asp-route-smart="@ViewData["SmartName"]">Title</a>
            </th>
            <th>
                <a asp-action="SmartTasks" asp-route-sort="@ViewData["description"]" asp-route-smart="@ViewData["SmartName"]">Description</a>
            </th>
            <th>
                <a asp-action="SmartTasks" asp-route-sort="@ViewData["taskimportance"]" asp-route-smart="@ViewData["SmartName"]">Importance</a>
            </th>
            <th>
                <a asp-action="SmartTasks" asp-route-sort="@ViewData["date"]" asp-route-smart="@ViewData["SmartName"]">Date</a>
            </th>
            <th>
                <a asp-action="SmartTasks" asp-route-sort="@ViewData["isactive"]" asp-route-smart="@ViewData["SmartName"]">IsCompleted</a>
            </th>
            <th>
                <a asp-action="SmartTasks" asp-route-sort="@ViewData["CreateDate"]" asp-route-smart="@ViewData["SmartName"]">CreateDate</a>
            </th>
            <th>
                IsMultipleTask
            </th>
            <th>
                ListName
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model._ToDoList)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Taskimportance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Isactive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsMultipleTask)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaskListId)
            </td>
        </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index">Back to List</a>
</div>




